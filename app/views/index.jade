extends layout/layout

block content
    div.col-sm-8.posts
        each post, key in posts
            .panel.panel-info.post
                .panel-heading
                    =((post.title.length > 0) ? post.title : "Sem tÃ­tulo")
                .panel-body
                    p=(post.message.length > 0) ? post.message : "Sem texto da mensagem"

    div.col-sm-4
        #word_cloud
            =words

    div.col-sm-12
        if (!user)
            a(href="/auth/login") Login
            br
            a(href="/auth/register") Register
            br
            a(href="/auth/facebook") Facebook
