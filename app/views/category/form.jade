extends ../layout/layout
block content
   div.row
      h2 Adicionar nova categoria
      div.col-sm-6
         form(method="POST", action="/category/new")
            .form-group
               label(for='name') Nome
               input.form-control(name='name', placeholder='Nome', type='text', maxlength='45', pattern='.{3,45}')
            .form-group
               label(for='description') Descrição
               input.form-control(name='description', placeholder='Descrição', type='text',maxlenght='100', pattern='.{3,100}')

            button.btn.btn-default Salvar